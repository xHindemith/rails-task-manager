<div class="container">
  <h1>Task list ✅</h1>
  <div class="cards">

  <div class="form-check">
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="task_<%= task.id %>" <%= task.completed ? 'checked' : '' %>>
          <label class="form-check-label" for="task_<%= task.id %>">
            <%= link_to task.title, task_path(task) %>
            <%= link_to '🗑️', task_path(task), class: 'btn btn-light', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
          </label>
        </div>
      </li>
    <% end %>
  </ul>
</div>

    <%= link_to "Add a new task", new_task_path %>
  </div>
</div>
